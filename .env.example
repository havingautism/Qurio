# Environment Variables Template
# Copy this file to .env and fill in your actual values
# PUBLIC_* variables are used by the React build.

# Supabase Configuration
PUBLIC_SUPABASE_URL=https://your-project.supabase.co
PUBLIC_SUPABASE_KEY=your-anon-key-here

# OpenAI Compatible API (Optional)
PUBLIC_OPENAI_API_KEY=your-openai-api-key
PUBLIC_OPENAI_BASE_URL=https://api.openai.com/v1
PUBLIC_OPENAI_PROXY_TARGET=https://api.openai.com/v1

# SiliconFlow API (Optional)
PUBLIC_SILICONFLOW_API_KEY=your-siliconflow-api-key
PUBLIC_SILICONFLOW_BASE_URL=https://api.siliconflow.cn/v1
PUBLIC_SILICONFLOW_PROXY_TARGET=https://api.siliconflow.cn/v1

# Google Gemini API (Optional)
PUBLIC_GOOGLE_API_KEY=your-google-api-key

# Tavily Search API (Optional)
PUBLIC_TAVILY_API_KEY=your-tavily-api-key
TAVILY_API_KEY=your-tavily-api-key

# GLM (Zhipu AI) API (Optional)
PUBLIC_GLM_API_KEY=your-glm-api-key
PUBLIC_GLM_BASE_URL=https://open.bigmodel.cn/api/paas/v4
PUBLIC_GLM_PROXY_TARGET=https://open.bigmodel.cn/api/paas/v4

# ModelScope (Optional)
PUBLIC_MODELSCOPE_API_KEY=your-modelscope-api-key
PUBLIC_MODELSCOPE_BASE_URL=https://api-inference.modelscope.cn/v1
PUBLIC_MODELSCOPE_PROXY_TARGET=https://api-inference.modelscope.cn/v1

# Kimi (Moonshot AI) API (Optional)
PUBLIC_KIMI_API_KEY=your-kimi-api-key
PUBLIC_KIMI_BASE_URL=https://api.moonshot.cn/v1
PUBLIC_KIMI_PROXY_TARGET=https://api.moonshot.cn/v1

# Notion OAuth (Optional)
PUBLIC_NOTION_OAUTH_URL=https://api.notion.com/v1/oauth/authorize?client_id=...&response_type=code&owner=user&redirect_uri=...

# Debugging
# LLM_DEBUG_REQUESTS=1
# LLM_DEBUG_STREAM=1
PUBLIC_BACKEND_URL=http://198.18.0.1:3002
# PUBLIC_USE_FLUENT_EMOJI=1 # Set to 0 to use native system emojis
